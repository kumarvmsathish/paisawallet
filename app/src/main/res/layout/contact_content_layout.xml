<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/contact_image_id"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/contact_psn_1_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/contact_image_id"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sent Bitcoin"
            android:textColor="#2a2a2a"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/added_txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Added: " />

            <TextView
                android:id="@+id/added_date_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/added_txt_id"
                android:text="Augest 13, 19:01" />


            <TextView
                android:id="@+id/contact_country_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="India"
                android:textColor="#2a2a2a"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>