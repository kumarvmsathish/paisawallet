<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vivartha.kryptopal.fragment.TransferFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_margin_20"
            android:text="@string/cards"
            android:textColor="@color/colorKryptoHome"
            android:textSize="@dimen/text_size_22"
            android:textStyle="bold" />


        <RadioGroup
            android:id="@+id/card_rGroup_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_30"
            android:layout_marginRight="@dimen/layout_margin_30"
            android:layout_marginTop="@dimen/layout_margin_top_15"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="@dimen/layout_weightsum_width_0"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_margin_20"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/kpx_card_image_id"
                    android:layout_width="@dimen/layout_width_128"
                    android:layout_height="@dimen/layout_height_81"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/kpxcard_icon" />

                <RadioButton
                    android:id="@+id/kpx_card_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/layout_weightsum_width_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_20"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ppx_card_image_id"
                    android:layout_width="@dimen/layout_width_128"
                    android:layout_height="@dimen/layout_height_81"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ppxcard_icon" />

                <RadioButton
                    android:id="@+id/ppx_card_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_10"
            android:layout_marginRight="@dimen/layout_margin_10"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/colorTextView"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/colorEditText"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/balance_layout_margin_top_10"
                android:text="@string/phone"
                android:textColor="@color/colorTextView"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="@color/colorEditText"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/balance_layout_margin_top_10"
                android:text="@string/email"
                android:textColor="@color/colorTextView"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorEditText"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/balance_layout_margin_top_10"
                android:text="@string/address"
                android:textColor="@color/colorTextView"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/colorEditText"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/balance_layout_margin_top_10"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="@dimen/layout_weightsum_width_0"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/country"
                        android:textColor="@color/colorTextView"
                        android:textSize="@dimen/text_size_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLength="25"
                            android:textColor="@color/colorEditText"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_weightsum_width_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin_10"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/state"
                        android:textColor="@color/colorTextView"
                        android:textSize="@dimen/text_size_16" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="25"
                        android:textColor="@color/colorEditText"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_10"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/cards_submit_btn_id"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_height_40"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_background"
                android:paddingLeft="@dimen/layout_margin_10"
                android:paddingRight="@dimen/layout_margin_10"
                android:text="@string/submit"
                android:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
