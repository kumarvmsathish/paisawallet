<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image_icon"
    tools:context="com.vivartha.kryptopal.fragment.IdentityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_margin_20"
        android:text="@string/search_to_connect"
        android:textColor="@color/colorKryptoHome"
        android:textSize="@dimen/text_size_22"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_20"
        android:layout_marginRight="@dimen/layout_margin_20"
        android:layout_marginTop="@dimen/layout_margin_20"
        android:text="@string/email"
        android:textColor="@color/colorTextView"
        android:textSize="@dimen/text_size_16" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_20"
        android:layout_marginRight="@dimen/layout_margin_20"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorEditText"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_20"
        android:layout_marginRight="@dimen/layout_margin_20"
        android:layout_marginTop="@dimen/layout_margin_top_15"
        android:text="@string/phone"
        android:textColor="@color/colorTextView"
        android:textSize="@dimen/text_size_16" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_20"
        android:layout_marginRight="@dimen/layout_margin_20"
        android:inputType="number|phone"
        android:maxLength="10"
        android:textColor="@color/colorEditText"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_20"
        android:layout_marginRight="@dimen/layout_margin_20"
        android:layout_marginTop="@dimen/layout_margin_top_15"
        android:text="@string/public_key"
        android:textColor="@color/colorTextView"
        android:textSize="@dimen/text_size_16" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_20"
        android:layout_marginRight="@dimen/layout_margin_20"
        android:textColor="@color/colorEditText"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_20"
        android:layout_marginRight="@dimen/layout_margin_20"
        android:layout_marginTop="@dimen/layout_margin_top_15"
        android:text="@string/country"
        android:textColor="@color/colorTextView"
        android:textSize="@dimen/text_size_16" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_20"
        android:layout_marginRight="@dimen/layout_margin_20"
        android:inputType="text"
        android:textColor="@color/colorEditText"
        android:textSize="@dimen/text_size_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_10"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height_40"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_background"
            android:text="@string/search"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>
