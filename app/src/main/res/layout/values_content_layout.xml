<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/layout_padding_15"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="@dimen/layout_width_0"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img_currency_type_id"
            android:layout_width="@dimen/layout_width_35"
            android:layout_height="@dimen/layout_height_35"
            android:src="@drawable/btc_icon" />

        <TextView
            android:id="@+id/txt_currency_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_margin_10"
            android:textColor="@color/colorKryptoHome"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_currency_point_id"
        android:layout_width="@dimen/layout_width_0"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.9"
        android:gravity="end"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:layout_width="@dimen/layout_width_0"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.1"
        android:gravity="end|center_vertical">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/txt_currency_value_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_margin_5"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/img_currency_status_id"
            android:layout_width="@dimen/layout_width_10"
            android:layout_height="@dimen/layout_height_12"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>