<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <stroke android:width="1dp" android:color="@color/colorRectangle" />
            <solid android:color="#eaeaea" />
        </shape>

    </item>

    <item android:color="@color/unpressed" android:state_focused="true" >
        <shape>
            <stroke android:width="1dp" android:color="@color/colorRectangle" />
            <solid android:color="#eaeaea" />
        </shape>
    </item>
    <item android:color="@color/unpressed" android:state_selected="true" >
        <shape>
            <stroke android:width="1dp" android:color="@color/colorRectangle" />
            <solid android:color="@color/colorText" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/colorRectangle" />
            <solid android:color="@color/colorText" />
        </shape>
    </item>

</selector>